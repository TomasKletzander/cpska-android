<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textStrong</item>
        <item name="android:textColorSecondary">@color/textLight</item>
        <item name="android:windowBackground">@drawable/blurred_background</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <style name="AppThemeOverlay.Navigator" parent="AppTheme">
        <item name="colorPrimary">@color/textStrong</item>
    </style>

    <style name="AppThemeOverlay.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="Text.Flights.Name" parent="Base.TextAppearance.AppCompat.Subhead">
    </style>

    <style name="Text.Flights.Club" parent="Base.TextAppearance.AppCompat.Caption">
    </style>

    <style name="Text.Flights.Glider" parent="Base.TextAppearance.AppCompat.Caption">
    </style>

    <style name="Text.Flights.Distance" parent="Base.TextAppearance.AppCompat.Subhead">
    </style>

    <style name="Text.Flights.Speed" parent="Base.TextAppearance.AppCompat.Caption">
    </style>

    <style name="Text.Flights.Points" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:background">@drawable/points_bg</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.Header.Date" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/headerBg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Flights.Settings.Title" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Flights.Settings.Label" parent="Base.TextAppearance.AppCompat.Caption">
    </style>

    <style name="Text.Club.Dropdown" parent="Base.TextAppearance.AppCompat.Subhead"/>

    <style name="Text.Competitions.Name" parent="Base.TextAppearance.AppCompat.Subhead"/>

    <style name="Text.Competitions.Categories" parent="Base.TextAppearance.AppCompat.Caption"/>

    <style name="SectionFrame">
        <item name="android:background">@drawable/section_bg</item>
        <item name="android:layout_marginLeft">@dimen/marginBig</item>
        <item name="android:layout_marginTop">@dimen/marginBig</item>
        <item name="android:layout_marginRight">@dimen/marginBig</item>
        <item name="android:padding">@dimen/marginBig</item>
    </style>

    <style name="Text.FlightInfo.Pilot" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.FlightInfo.Club" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.FlightInfo.Plane" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.FlightInfo.Distance" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.FlightInfo.Speed" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.FlightInfo.Points" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Clubs.Name" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
